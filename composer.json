{
    "name": "sarueframework/orm",
    "description": "ORM for Sarue Framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sarue\\Orm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarue\\Orm\\Tests\\Unit\\": "tests/unit",
            "Sarue\\Orm\\Tests\\Integration\\": "tests/integration"
        }
    },
    "authors": [
        {
            "name": "Jos√© San Martin",
            "email": "jose@josesanmartin.net"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test-cs": "vendor/bin/php-cs-fixer check --rules=@Symfony,@PER-CS2.0 .",
        "test-cs-fix": "vendor/bin/php-cs-fixer fix --rules=@Symfony,@PER-CS2.0 .",
        "test-phpunit": "vendor/bin/phpunit --display-notices --display-warnings --fail-on-notice --fail-on-warning tests/unit/",
        "test-phpunit-coverage": "vendor/bin/phpunit --display-notices --display-warnings --fail-on-notice --fail-on-warning --coverage-html tests/unit/coverage --coverage-filter src/ tests/unit/",
        "test-integration": "vendor/bin/phpunit --display-notices --display-warnings --fail-on-notice --fail-on-warning tests/integration/",
        "test-integration-coverage": "vendor/bin/phpunit --display-notices --display-warnings --fail-on-notice --fail-on-warning --coverage-html tests/integration/coverage --coverage-filter src/ tests/integration/",
        "test-phpstan": "vendor/bin/phpstan analyse src -l 9"
    }
}
